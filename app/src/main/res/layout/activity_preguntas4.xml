<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preguntas4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        android:scrollbars="none"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView69"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:text="¿Cuánto estrés físico sufres regularmente?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButton22"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"

                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Alto" />

                <RadioButton
                    android:id="@+id/radioButton24"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"

                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Regular" />

                <RadioButton
                    android:id="@+id/radioButton23"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"

                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Bajo" />

                <RadioButton
                    android:id="@+id/radioButton25"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Nulo" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView70"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:text="¿Cuánto estrés mental sufres regularmente?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButton26"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"

                    android:buttonTint="@color/bluekorellia"
                    android:gravity="center"
                    android:text="Alto"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/radioButton27"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Regular" />

                <RadioButton
                    android:id="@+id/radioButton28"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Bajo" />

                <android.widget.Button
                    android:id="@+id/button24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/custom_input2"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"
                    android:onClick="preguntas40"
                    android:text="Siguiente"
                    android:textAllCaps="false"
                    android:textSize="16dp" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
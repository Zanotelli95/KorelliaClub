<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuevobloque">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewentrenamientofinalizado2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/k" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/redwhite"
                android:textSize="16dp"

                android:text="Bloque de entrenamiento terminado." />

            <TextView
                android:id="@+id/textView242"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/bluekorellialight"
                android:textStyle="italic"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Para generar un nuevo bloque de entrenamiento, responde:" />

            <TextView
                android:id="@+id/textView217"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:text="¿Cuántos días a la semana quieres seguir entrenando?" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButton62"
                    android:layout_gravity="center"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="3 días" />

                <RadioButton
                    android:id="@+id/radioButton63"
                    android:layout_gravity="center"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="4 días" />

                <RadioButton
                    android:id="@+id/radioButton64"
                    android:layout_gravity="center"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="5 días"/>

                <RadioButton
                    android:id="@+id/radioButton65"
                    android:layout_gravity="center"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="6 días" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView265"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="Actualiza tu peso corporal (kg)." />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/kg2"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:ems="10"
                android:gravity="center"
                android:maxLength="3"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12sp"
                android:background="@drawable/custom_input"
                android:inputType="number"
               />

            <TextView
                android:id="@+id/textView268"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Actualiza tu objetivo." />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >



                <RadioButton
                    android:id="@+id/radioButton67"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Desarrollar masa muscular" />

                <RadioButton
                    android:id="@+id/radioButton68"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Definir mi musculatura y bajar de peso" />

                <RadioButton
                    android:id="@+id/radioButton69"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Mantenimiento" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView269"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:text="Actualiza tu objetivo nutricional" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButton66"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo ganar mucho peso corporal" />

                <RadioButton
                    android:id="@+id/radioButton70"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo ganar un peso corporal moderado" />

                <RadioButton
                    android:id="@+id/radioButton71"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo ganar poco peso corporal" />

                <RadioButton
                    android:id="@+id/radioButton72"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo mantener mi peso corporal" />

                <RadioButton
                    android:id="@+id/radioButton73"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo bajar poco peso corporal" />

                <RadioButton
                    android:id="@+id/radioButton74"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo bajar un peso corporal moderado" />

                <RadioButton
                    android:id="@+id/radioButton75"
                    android:background="@drawable/radiobutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:buttonTint="@color/bluekorellia"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:text="Planeo bajar mucho peso corporal" />
            </RadioGroup>

            <android.widget.Button
                android:id="@+id/button21"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:background="@drawable/fondo4"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:onClick="finalizarbloque"
                android:text="Continuar" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
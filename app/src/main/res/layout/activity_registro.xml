<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".registro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Registro" />

            <EditText
                android:id="@+id/nombreregistro"
                android:hint="Nombre"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                />

            <EditText
                android:id="@+id/apellidosregistro"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:hint="Apellidos" />

            <EditText
                android:id="@+id/emailregistro"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:hint="Correo electrónico" />

            <EditText
                android:id="@+id/telefonoregistro"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="Teléfono"
                android:inputType="phone"
                android:paddingStart="15dp" />


            <android.widget.Button
                android:id="@+id/botonfechadenacimiento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"

               android:gravity="fill_vertical"

                android:textSize="16dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/custom_input"
                android:hint="Fecha de nacimiento"
                android:paddingStart="15dp" />


            <EditText
                android:id="@+id/contraseñaregistro"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textPassword"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:hint="Contraseña" />

            <EditText
                android:id="@+id/confirmarregistro"
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="textPassword"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:hint="Confirmar contraseña" />


            <Spinner
                android:id="@+id/spinnersexo"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textSize="35dp"
                android:scrollbarSize="6dp">

            </Spinner>

            <Spinner
                android:id="@+id/spinnerpais"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:textSize="35dp"
                android:scrollbarSize="6dp">

            </Spinner>


            <android.widget.Button
                android:id="@+id/acceder"
                android:background="@drawable/custom_input2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Registrarse" />

            <TextView
                android:id="@+id/terminosderegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Al registrarse, acepta los Términos y Condiciones de Korellia" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>